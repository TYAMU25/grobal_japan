<div class="container">

  <div class="row">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
      <h2 class="mb-4">新規会員登録</h2>

      <%= form_with model: @general_user, url: general_user_registration_path, local: true, class: "mb-3 pl-md-3" do |f| %>

        <div class="form-group row">
          <%= f.label "名前", class: "col-md-4 col-form-label" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :name, autofocus: true,  placeholder: "名前", class:"form-control" %>
          </div>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :gender, autofocus: true,  placeholder: "性別", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :birthdate, "生年月日", class: "col-md-4 col-form-label" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :email, autofocus: true,  placeholder: "Eメール", class:"form-control" %>
          </div>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :encrypted_password, autofocus: true,  placeholder: "パスワード（６文字以上）", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, "自己紹介文", class: "col-md-4 col-form-label" %>
          <div class="col-sm-6 col-md-4">
            <%= f.email_field :self_introduction, autofocus: true, autocomplete: "email", placeholder: "", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-7 text-right">
            <%= f.submit "新規登録", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>

      <h4 class="mb-3">既に登録済みの方</h4>
      <p class="pl-3"><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>