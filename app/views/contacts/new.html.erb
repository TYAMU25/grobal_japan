<div class="container">
  <%= form_for(@contact, url: confirm_path) do |f| %>
  <div class="form-group">
    <h3><%= f.label :name, 'お名前*' %></h3>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <h3><%= f.label :phone_number, '電話番号' %></h3>
    <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <h3><%= f.label :email, '返信先メールアドレス' %></h3>
    <%= f.text_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <h3><%= f.label :message, 'お問い合わせメッセージ*' %></h3>
    <%= f.text_area :message, autofocus: true,class: 'form-control' %>
  </div>
  
  
  <div>
  <h4><%= f.submit '入力内容確認' %></h4>
  </div>
<% end %>
</div>

