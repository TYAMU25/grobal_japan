<div class="container">

  <div class="row">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
      <h2 class="mb-4">新規会員登録</h2>

      <%= form_with model: @general_user, url: general_user_registration_path, local: true, class: "mb-3 pl-md-3" do |f| %>

        <div class="form-group row">
          <div class="col-sm-6 col-md-4">
            <%= f.label "名前", class: "col-md-4 col-form-label" %>
            <%= f.text_field :name, autofocus: true,  placeholder: "", class:"form-control" %>
          </div>
          <div class="col-sm-6 col-md-4">
            <%= f.label "性別", class: "col-md-4 col-form-label" %>
            <%= f.text_field :gender, autofocus: true,  placeholder: "", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-6 col-md-4">
            <%= f.label "生年月日", class: "col-md-4 col-form-label" %>
            <%= f.text_field :birthdate, autofocus: true,  placeholder: "1995/11/11", class:"form-control" %>
          </div>
          <div class="col-sm-6 col-md-4">
            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "Eメール" %>
        </div>

        <div class="form-group row">
          <div class="col-7 text-right">
            <%= f.submit "新規登録", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>

      <h4 class="mb-3">既に登録済みの方</h4>
      <p class="pl-3"><%= link_to "こちら", new_general_user_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>