<h1>編集</h1>
<%= form_with model: @submission, url: submission_path(@submission), local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>性別</h4>
  <%= f.text_field :gender %>
  
  <h4>本文</h4>
  <%= f.text_area :text %>
  
  <h4>募集対象</h4>
  <%= f.text_field :submissions_target %>
  <%= f.submit '更新' %>
<% end %>