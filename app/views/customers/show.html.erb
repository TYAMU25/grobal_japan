<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2><%= @general_user.name %>さんの会員詳細</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
      <table class="table table-bordered">
        <tr>
          <th class="table-active">名前</th>
          <td><%= @general_user.name %></td>
        </tr>
        <tr>
          <th class="table-active">性別</th>
          <td><%= @general_user.gender %></td>
        </tr>
        <tr>
          <th class="table-active">生年月日</th>
          <td><%= @general_user.birthdate %></td>
        </tr>
        <tr>
          <th class="table-active">Eメール</th>
          <td><%= @general_user.email %></td>
        </tr>
        <tr>
          <th class="table-active">パスワード</th>
          <td><%= @general_user.encrypted_password %></td>
        </tr>
        <tr>
          <th class="table-active">自己紹介文</th>
          <td><%= @general_user.self_introduction %></td>
        </tr>



        </tr>
      </table>
    </div>
  </div>