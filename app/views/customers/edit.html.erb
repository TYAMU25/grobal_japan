<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
      <h2 class="mb-4 ml-md-n2">アカウント編集</h2>
      <%= form_with model: @general_user, url: customer_path(@general_user), local:true do |f| %>
      <div class="form-group row">
        <%= f.label :name, "名前", class: "col-form-label col-md-4" %>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :gender, "性別", class: "col-form-label col-md-4" %>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :gender, class: "form-control" %>
         </div>
      </div>

      <div class="form-group row">
        <%= f.label :birthdate, "生年月日", class: "col-form-label col-md-4" %>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :birthdate, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, "Eメール", class: "col-form-label col-md-4" %>
        <div class="col-md-8">
          <%= f.text_area :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, "パスワード", class: "col-form-label col-md-4" %>
        <div class="col-sm-6 col-md-4">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-form-label col-md-4" %>
        <div class="col-sm-6 col-md-4">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="col-6 col-md-4 offset-md-4">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        </div>
        <div class="col-6 col-md-4 text-right">
          <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>